{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-west-2",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "name": "amzn-ami-hvm-*-x86_64-gp2",
        "root-device-type": "ebs"
      },
      "owners": ["amazon"],
      "most_recent": true
    },
    "instance_type": "t2.micro",
    "ssh_username": "ubuntu",
    "ami_name": "od2-web-{{timestamp}}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "script": "server-setup.sh"
    },
    {
      "type": "shell-local",
      "command": "tar cf files_to_upload/files.tar files"
    },
    {
      "type": "file",
      "source": "./files_to_upload/files.tar",
      "destination": "/tmp/files.tar"
    },
    {
      "type": "shell",
      "script": "move-files.sh"
    }
  ]
}
